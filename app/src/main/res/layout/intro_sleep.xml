<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/intro_dots_height"
    android:background="@color/colourSleep"
    tools:ignore="Overdraw">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/intro_text_padding_bottom" />

        <ImageView
            android:id="@+id/sleep_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/intro_image_height"
            android:contentDescription="@string/intro_sleep_image_description"
            app:srcCompat="@drawable/ic_sleep"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/intro_text_padding_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_title"
            android:theme="@style/IntroTitleText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_text1"
            android:theme="@style/IntroText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_text2"
            android:theme="@style/IntroText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_text3"
            android:theme="@style/IntroSubheading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_text4"
            android:theme="@style/IntroBullets" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_text5"
            android:theme="@style/IntroSubheading" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_sleep_text6"
            android:theme="@style/IntroText" />

    </LinearLayout>
</ScrollView>