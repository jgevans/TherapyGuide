<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="ToolbarThemeBase">
        <item name="android:background">@color/colorPrimaryAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppThemeSleep" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colourSleep</item>
        <item name="colorPrimaryDark">@color/colourSleepDark</item>
        <item name="colorAccent">@color/colourSleepAccent</item>
    </style>

    <style name="AppThemePositivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colourPositivity</item>
        <item name="colorPrimaryDark">@color/colourPositivityDark</item>
        <item name="colorAccent">@color/colourPositivityAccent</item>
    </style>

    <style name="AppThemeKindness" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colourKindness</item>
        <item name="colorPrimaryDark">@color/colourKindnessDark</item>
        <item name="colorAccent">@color/colourKindnessAccent</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTitleText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IntroTextCommon">
        <item name="android:textSize">@dimen/intro_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/intro_padding_side</item>
        <item name="android:paddingRight">@dimen/intro_padding_side</item>
        <item name="android:paddingBottom">@dimen/intro_text_padding_bottom</item>
    </style>

    <style name="IntroTitleText" parent="IntroTextCommon">
        <item name="android:textSize">@dimen/intro_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="IntroText" parent="IntroTextCommon">
    </style>
    <style name="IntroBullets" parent="IntroTextCommon">
        <item name="android:paddingLeft">@dimen/intro_bullets_padding_side</item>
        <item name="android:paddingRight">@dimen/intro_bullets_padding_side</item>
    </style>
    <style name="IntroSubheading" parent="IntroTextCommon">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AboutTitleText" parent="IntroTextCommon">
        <item name="android:textSize">@dimen/intro_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="AboutText" parent="IntroTextCommon">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="KindnessInstructionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/intro_text_padding_bottom</item>
        <item name="android:paddingBottom">@dimen/intro_text_padding_bottom</item>
    </style>
</resources>
